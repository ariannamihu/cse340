<!-- Title View -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>


<% if (messages.notice) { %>
    <div class="alert alert-success">
        <% messages.notice.forEach(function(msg) { %>
            <%= msg %>
        <% }) %>
    </div>
<% } %>


<div class=form>
    <form id="loginForm" action="/account/login-new" method="post">
        <div class=email>
            <label for="email">Email:</label>
            <input type="email" id="email" name="account_email" required>
        </div>
        <div class="password">
            <label for="password">Password:</label>
            <input type="password" id="password" name="account_password" required>
            <p>Password must contain: 12+ characters, 1 capital, 1 number, and 1 special character</p>
        </div>
        <button class=login type="submit">Login</button>
    </form>
</div>    

<p>
    Don't have an account? <a href="/account/register">Register here</a>
</p>