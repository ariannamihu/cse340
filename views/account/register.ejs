      res.redirect('/')
    } %>

<% if (messages.length > 0) { %>
  <div class="alert alert-info">
    <%= messages %>
  </div>
<% } %>



<div class=form>
    <form  action="/account/register-new" method="POST">
        <h1><%= title %></h1>
        <div class=firstName>
            <label for="account_firstname">First name:</label>
            <input type="text" name="account_firstname" id="account_firstname" required value="<%= locals.account_firstname %>">
        </div>
        <div class=lastName>
            <label for="account_lastname">Last name:</label>
            <input type="text" id="account_lastname" name="account_lastname" required value="<%= locals.account_lastname %>">
        </div>
        <div class=email>
            <label for="account_email">Email:</label>
            <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>">
        </div>
        <div class="password">
            <label for="account_password">Password:</label>
            <input type="password" id="account_password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
            <p>Password must contain: 12+ characters,1 lowercase, 1 capital, 1 number, and 1 special character</p>
        </div>
        <button class=login type="submit">Register</button>
    </form>
</div>  