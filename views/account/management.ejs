<!-- Title View -->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<% if (messages.notice) { %>
  <div class="alert alert-success">
      <% messages.notice.forEach(function(msg) { %>
          <%= msg %>
      <% }) %>
  </div>
<% } %>

<div id="management-main">
    <h2>Welcome <%=accountData.account_firstname%>!</h2>
    <p>You're logged in</p>
    <a href="/account/update-info/<%=accountData.account_id%>">Update Account Information</a>
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") {%>
      <h3>Manage Inventory</h3>
      <a href="/inv/">Inventory Management</a>
    <%}%>
</div>